<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRM_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Insurtech CRM</a>
                <a class="navbar-brand" asp-controller="Customer" asp-action="Index">Müşteriler</a>
                <a class="navbar-brand" asp-controller="Policy" asp-action="Index">Poliçeler</a>
                <a class="navbar-brand" asp-controller="ContactLog" asp-action="Index">İletişim Kayıtları</a>
                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <div class="d-flex ms-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="me-2 align-self-center text-white">Merhaba @User.Identity.Name</span>
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm">Çıkış Yap</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-sm me-2">Giriş Yap</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success btn-sm">Kayıt Ol</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CRM_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
