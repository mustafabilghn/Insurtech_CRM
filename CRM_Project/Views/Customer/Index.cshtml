@model IEnumerable<CRM_Project.Models.Customer>
@{
    ViewData["Title"] = "Index";
}

<h1>Müşteri Listesi</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Telefon Numarası</th>
            <th>E-posta Adresi</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>@customer.CreationTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Müşteri Ekle</a>
</p>
