@model IEnumerable<CRM_Project.Models.ContactLog>
@{
    ViewData["Title"] = "İletişim Kayıtları";
}

<h1>İletişim Kayıtları</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Müşteri</th>
            <th>İletişim Tarihi</th>
            <th>İletişim Yöntemi</th>
            <th>Notlar</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer.FullName</td>
                <td>@item.ContactDate.ToString("dd/MM/yyyy")</td>
                <td>@item.ContactMethod</td>
                <td>@item.Note</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Kayıt Ekle</a>

